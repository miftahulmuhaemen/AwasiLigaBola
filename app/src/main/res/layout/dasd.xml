<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
>

    <ImageView android:id="@+id/image" android:layout_width="60dp" android:layout_height="60dp" android:src="@drawable/australian_a_league"/>
    <TextView android:layout_toRightOf="@id/image" android:layout_centerVertical="true" android:id="@+id/name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Arsenal"/>
    <TextView android:layout_toRightOf="@id/image" android:layout_below="@id/name" android:id="@+id/alias" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="The Gunner"/>
</RelativeLayout>